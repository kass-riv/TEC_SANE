@model appTsane.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Producto</h1>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenName" class="control-label"></label>
                <input asp-for="ImagenName" class="form-control" />
                <span asp-validation-for="ImagenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" >
                     <option value="A">Active</option>
                     <option value="I">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>                
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                 <a asp-action="Index"><button class="btn btn-success"> Regresar</button></a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}











