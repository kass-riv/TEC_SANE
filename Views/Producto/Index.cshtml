@model IEnumerable<appTsane.Models.Producto>


 @{
    ViewData["Title"] = "Producto";
}

<h1>Producto</h1>

<p>
     <a asp-action="Create"><button class="btn btn-success"> Crear Producto</button></a>
</p>


<table class="table table-dark table-striped mt-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenName)
            </th>
             <th scope="col">Acciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagenName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID"><button class="btn btn-primary">Editar</button></a> 
                <a asp-action="Details" asp-route-id="@item.ID"><button class="btn btn-info">Detalles</button></a> 
                <a asp-action="Delete" asp-route-id="@item.ID"><button class="btn btn-danger">Eliminar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>