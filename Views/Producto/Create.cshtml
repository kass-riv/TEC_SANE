@model appTsane.Models.Producto

@{
    ViewData["Title"] = "Create";
}


<h2>Crear Producto</h2>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Precio</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <div>
                <label asp-for="ImagenName"></label>
                <input asp-for="ImagenName" class="form-control">
                </div>
                
            </div>
            
            <div class="form-group">
                <label asp-for="Status" class="control-label">Estado</label>
                <select asp-for="Status" class="form-control" >
                     <option value="A">Activo</option>
                     <option value="I">Inactivo</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                 <a asp-action="Index"><button class="btn btn-success"> Regresar</button></a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}