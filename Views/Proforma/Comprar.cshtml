@{
    ViewData["Title"] = "Comprar";
}




        </header>
        <div class="creditCardForm">
            <div class="heading">
                <h1>Confirmar Compra</h1>
            </div>
            <div class="payment">
                <form method="POST" asp-controller="Proforma" asp-action="CompraConfirmada">
                    <div class="form-group owner">
                        <label for="owner">Due√±o</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group CVV">
                        <label for="cvv">CVV</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group" id="card-number-field">
                        <label for="cardNumber">Numero de Tarjeta</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group" id="expiration-date">
                        <label>Fecha de Expiracion</label>
                        <select>
                            <option value="01">Enero</option>
                            <option value="02">Febrero </option>
                            <option value="03">Marzo</option>
                            <option value="04">Abril</option>
                            <option value="05">Mayo</option>
                            <option value="06">Junio</option>
                            <option value="07">Julio</option>
                            <option value="08">Augosto</option>
                            <option value="09">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                        <select>
                            <option value="16"> 2016</option>
                            <option value="17"> 2017</option>
                            <option value="18"> 2018</option>
                            <option value="19"> 2019</option>
                            <option value="20"> 2020</option>
                            <option value="21"> 2021</option>
                        </select>
                    </div>
                    <div class="form-group" id="credit_cards">
                        <img src="/img/visa.jpg" id="visa">
                        <img src="/img/mastercard.jpg" id="mastercard">
                        <img src="/img/amex.jpg" id="amex">
                    </div>
                    <div class="form-group" id="pay-now">
                        <a asp-controller="Proforma" asp-action="CompraConfirmada"><button class="btn btn-danger">Confirmar</button></a>
                    </div>
                </form>
                
            </div>
        </div>

    </div>
