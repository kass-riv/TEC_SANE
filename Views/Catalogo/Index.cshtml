@model IEnumerable<appTsane.Models.Producto>

@{
    ViewData["Title"] = "Catalogo";
    
}


<form asp-action="Index" method="GET">


  <div class="form-actions no-color">
    <p> 
      Buscar: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]">
      <input type="submit" value="Buscar" class="btn btn-primary">
      <button class="btn btn-primary"><a asp-action="Index"  style="color: white;">Todos los Productos</a></button>
    </p>
  </div>
</form>
<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                     <img class="img-responsive" width="200" height="200"


                       src="/img/@item.ImagenName" alt="@item.ImagenName"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p class="card-text" style="text-align: center;">Precio: @Html.DisplayFor(modelItem => item.Price)</p>
                  <a class="btn btn-primary" style="background-color: black;" asp-action="Add" asp-route-id="@item.ID">Comprar</a>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>








